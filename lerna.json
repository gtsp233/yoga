{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": ["**/*.test.jsx", "**/*.test.tsx", "**/*.md"],
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): :tada: :rocket: [skip ci]",
      "allowBranch": ["master", "alpha", "beta"]
    }
  }
}
